@{
    ViewData["Title"] = "Home Page";

}
@model MeetingTrackManagement.Web.Mvc.Models.MeetingViewModel

<div class="container-fluid">
    <div class="page-header">
        <h1>
            Meeting <small>Track Management</small>
        </h1>
    </div>
    <div class="row">
        <div class="col-md-12">

            @using (Html.BeginForm("Meeting", "Home", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, true, new {@id = "MeetingForm", @class = "m-t", role = "form"}))
            {

                <div class="form-group">
                    <label>
                        Meeting Details(Separated by new line)
                    </label>
                    @Html.TextAreaFor(m => m.Input, new {@class = "form-control", rows = "15"})
                </div>
                <div class="form-group">

                    <label>
                        Number of Tracks
                    </label>
                    @Html.TextBoxFor(m => m.Tracks, new {@class = "form-control", type = "number"})
                </div>
                <button type="submit" (click)="Get()" class="btn btn-primary">
                    Submit
                </button>
            }
        </div>
    </div>
</div>
